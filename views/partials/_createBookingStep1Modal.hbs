<!-- Modal -->
<div class="modal fade" id="createBookingStep1Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new booking:<br>
        choose date range</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      {{#if addNewBookingAlertEmpty}}
        <div class="alert alert-danger" role="alert" style="text-align: center">
          Date from and date to can't be empty...
        </div>
      {{/if}}

      {{#if addNewBookingAlertValue}}
        <div class="alert alert-danger" role="alert" style="text-align: center">
          Date from must be earlier than date to...
        </div>
      {{/if}}

      <div class="modal-body">
        <form action="/bookings/nextStep/true" method="post">
          <div class="form-row">
            <div class="form-group col-md-6">
              <input name="dateFrom" type="date" class="form-control" placeholder="Date from">
              <small class="form-text text-muted" style="text-align: center">date from...</small>
            </div>

            <div class="form-group col-md-6">
              <input name="dateTO" type="date" class="form-control" placeholder="Date to">
              <small class="form-text text-muted" style="text-align: center">date to...</small>
            </div>
          </div>

          <div class="form-group">
            <div class="form-row">
              <div class="col align-self-end">
                <button type="button" class="btn btn-secondary btn-sm float-left" data-dismiss="modal">Cancel</button>
                <input  class="btn btn-primary btn-sm float-right" type="submit" value="Next step">
              </div>
            </div>
          </div>
        </form>
       </div>
    </div>
  </div>
</div>

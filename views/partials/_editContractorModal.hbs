<!-- Modal -->
<div class="modal fade" id="editContractorModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit contractor</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form action="/contractors/edit/{{this.id}}" method="post">
          <div class="form-row">
            <div class="form-group col-md-6">
              <input value ="{{this.contractorName}}" name="contractorName" type="text" class="form-control" placeholder="Contractor name">
              <small class="form-text text-muted">contractor name...</small>
            </div>
            <div class="form-group col-md-6">
              <input value ="{{this.contractorOwe}}" name="contractorOwe" type="text" class="form-control" placeholder="Contractor owe">
              <small class="form-text text-muted">contractor owner...</small>
            </div>
          </div>

          <div class="form-group">
            <div class="form-row">
              <div class="col align-self-end">
                <button type="button" class="btn btn-secondary btn-sm float-left" data-dismiss="modal">Cancel</button>
                <input  class="btn btn-primary btn-sm float-right" type="submit" value="Submit">
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
